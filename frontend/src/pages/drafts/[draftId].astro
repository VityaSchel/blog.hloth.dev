---
import { type CollectionEntry, getCollection, render } from "astro:content";
import PostPageLayout from "$layouts/PostPageLayout.astro";
import { components } from "$ui/content";

export async function getStaticPaths() {
	if (import.meta.env.PROD) return [];
	const drafts = await getCollection("drafts");
	return drafts.map((draft) => ({
		params: { draftId: draft.id },
		props: draft,
	}));
}
type Props = CollectionEntry<"drafts">;

const draft = Astro.props;
const { Content, headings } = await render(draft);
---

<PostPageLayout mb id={draft.id} {...draft.data} {headings}>
	<Content {components} />
</PostPageLayout>
