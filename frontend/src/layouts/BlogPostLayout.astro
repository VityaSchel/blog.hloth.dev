---
import BaseLayout from "$layouts/BaseLayout.astro";
import type { CollectionEntry } from "astro:content";

type Props = CollectionEntry<"blog">["data"];

const {
	title,
	excerpt,
	banner,
	bannerAlt,
	locale,
	createdAt,
	updatedAt,
	category,
} = Astro.props;
---

<BaseLayout
	{title}
	description={excerpt}
	image={{ src: banner, alt: bannerAlt }}
	{locale}
	article={{ createdAt, updatedAt, category }}
>
	<slot />
</BaseLayout>
