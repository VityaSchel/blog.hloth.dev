---
interface Props {
	date: Date;
}
const { date } = Astro.props;
---

<div class="text-[#a3a3a3] dark:text-[#4b5563]">
	<span class="font-display font-semibold">
		<slot />
	</span>
	<time
		datetime={date.toISOString()}
		title={Intl.DateTimeFormat("en-US", {
			day: "2-digit",
			month: "2-digit",
			year: "numeric",
			hour: "2-digit",
			minute: "2-digit",
			second: "2-digit",
		}).format(date)}
	>
		{
			Intl.DateTimeFormat("en-US", {
				day: "numeric",
				month: "long",
				...(date.getFullYear() !== new Date().getFullYear() && {
					year: "numeric",
				}),
			}).format(date)
		}
	</time>
</div>
