---
import DualNav from "$components/DualNav.astro";
import Separator from "$ui/Separator.astro";
import {
	mapCollectionEntryToNavPostLink,
	type NavPostLink,
} from "$lib/nav-post-link";
import type { CollectionEntry } from "astro:content";

interface Props {
	previous?: CollectionEntry<"blog">;
	next?: CollectionEntry<"blog">;
}
let { previous, next } = Astro.props;

const startEl: NavPostLink | undefined =
	mapCollectionEntryToNavPostLink(previous);
const endEl: NavPostLink | undefined = mapCollectionEntryToNavPostLink(next);
---

<div class="mb-6 flex w-full flex-col gap-[12px] md:mb-9">
	<Separator class="mb-3!" />
	<DualNav {startEl} {endEl} />
</div>
