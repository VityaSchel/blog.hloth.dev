{
	"extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist"],
	"compilerOptions": {
		"strictNullChecks": true,
		"baseUrl": ".",
		"paths": {
			"$components/*": ["src/components/*"],
			"$assets/*": ["src/assets/*"],
			"$layouts/*": ["src/layouts/*"],
			"$styles/*": ["src/styles/*"],
			"$emoji/*": ["src/assets/emoji/*"],
			"$consts": ["src/lib/consts.ts"],
			"$lib/*": ["src/lib/*"],
			"$ui/*": ["src/components/ui/*"],
			"$emoji": ["src/components/Emoji.svelte"]
		}
	},
	"mdx": {
		"checkMdx": true
	}
}
