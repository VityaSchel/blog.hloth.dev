{
	"name": "blog.hloth.dev",
	"version": "1.0.0",
	"type": "module",
	"author": "Viktor Shchelochkov <hi@hloth.dev> (https://hloth.dev)",
	"lint-staged": {
		"*.{js,ts,svelte}": [
			"eslint --cache --fix",
			"prettier --write"
		]
	},
	"scripts": {
		"prepare": "husky",
		"dev": "dotenvx run -f .env.development --log-level=warn -- bun --bun vite dev",
		"build:dev": "dotenvx run -f .env.development --log-level=warn -- bun --bun vite build",
		"preview": "dotenvx run -f .env.development --log-level=warn -- bun --bun vite preview",
		"build:prod": "dotenvx run -f .env.production --log-level=warn -- bun --bun vite build",
		"sync": "dotenvx run -f .env.development --log-level=warn -- svelte-kit sync",
		"check": "bun sync && dotenvx run -f .env.development --log-level=warn -- svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "bun sync && dotenvx run -f .env.development --log-level=warn -- svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"db:push": "dotenvx run -f .env.development --log-level=warn -- drizzle-kit push",
		"db:generate": "dotenvx run -f .env.development --log-level=warn -- drizzle-kit generate",
		"db:migrate": "dotenvx run -f .env.production --log-level=warn -- drizzle-kit migrate",
		"db:studio:dev": "dotenvx run -f .env.development --log-level=warn -- drizzle-kit studio",
		"db:studio:prod": "dotenvx run -f .env.production --log-level=warn -- drizzle-kit studio",
		"web-push-keys:generate": "web-push generate-vapid-keys"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.2",
		"@eslint/js": "^9.35.0",
		"@sveltejs/adapter-node": "^5.3.1",
		"@sveltejs/kit": "^2.37.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.0",
		"@tailwindcss/vite": "^4.1.13",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/node": "^24.3.1",
		"@types/web-push": "^3.6.4",
		"drizzle-kit": "^0.31.4",
		"eslint": "^9.35.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-better-tailwindcss": "^3.7.7",
		"eslint-plugin-svelte": "^3.12.2",
		"globals": "^16.4.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.6",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"shiki": "^3.12.2",
		"svelte": "^5.38.8",
		"svelte-check": "^4.3.1",
		"tailwindcss": "^4.1.13",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.43.0",
		"vite": "^7.1.5",
		"vite-bundle-analyzer": "^1.2.3"
	},
	"dependencies": {
		"@dotenvx/dotenvx": "^1.49.0",
		"@editorjs/code": "^2.9.3",
		"@editorjs/delimiter": "^1.4.2",
		"@editorjs/editorjs": "^2.31.0",
		"@editorjs/embed": "^2.7.6",
		"@editorjs/header": "^2.8.8",
		"@editorjs/image": "^2.10.3",
		"@editorjs/link": "^2.6.2",
		"@editorjs/list": "^2.0.8",
		"@editorjs/quote": "^2.7.6",
		"@editorjs/warning": "^1.4.1",
		"@eonasdan/editorjs-code": "^3.0.4",
		"@fontsource-variable/montserrat": "^5.2.7",
		"@fontsource-variable/source-serif-4": "^5.2.8",
		"@fontsource/poppins": "^5.2.6",
		"@hloth/editorjs-video": "^2.10.5",
		"@sentry/sveltekit": "^10.11.0",
		"cheerio": "^1.1.2",
		"drizzle-orm": "^0.44.5",
		"editorjs-html": "^4.0.5",
		"jsonwebtoken": "^9.0.2",
		"plaiceholder": "^3.0.0",
		"postgres": "^3.4.7",
		"pow-reaction": "^1.0.16",
		"sharp": "^0.34.3",
		"super-sitemap": "^1.0.5",
		"svelte-sonner": "^1.0.5",
		"trap-focus-svelte": "^1.1.0",
		"web-push": "^3.6.7",
		"xss": "^1.0.15",
		"zod": "^4.1.5"
	},
	"patchedDependencies": {
		"@editorjs/image@2.10.3": "patches/@editorjs%2Fimage@2.10.3.patch"
	}
}
