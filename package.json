{
	"name": "blog.hloth.dev",
	"version": "1.0.0",
	"type": "module",
	"license": "MIT",
	"author": "Viktor Shchelochkov <hi@hloth.dev> (https://hloth.dev)",
	"lint-staged": {
		"*.{js,ts,svelte}": [
			"eslint --cache --fix",
			"prettier --write"
		]
	},
	"scripts": {
		"prepare": "husky",
		"dev": "dotenvx run -f .env.development --log-level=warn -- bun --bun vite dev",
		"build:dev": "dotenvx run -f .env.development --log-level=warn -- bun --bun vite build",
		"preview": "dotenvx run -f .env.development --log-level=warn -- bun --bun vite preview",
		"build:prod": "dotenvx run -f .env.production --log-level=warn -- bun --bun vite build",
		"sync": "dotenvx run -f .env.development --log-level=warn -- svelte-kit sync",
		"check": "bun sync && dotenvx run -f .env.development --log-level=warn -- svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "bun sync && dotenvx run -f .env.development --log-level=warn -- svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"db:push": "dotenvx run -f .env.development --log-level=warn -- drizzle-kit push",
		"db:generate": "dotenvx run -f .env.development --log-level=warn -- drizzle-kit generate",
		"db:migrate": "dotenvx run -f .env.production --log-level=warn -- drizzle-kit migrate",
		"db:studio:dev": "dotenvx run -f .env.development --log-level=warn -- drizzle-kit studio",
		"db:studio:prod": "dotenvx run -f .env.production --log-level=warn -- drizzle-kit studio",
		"web-push-keys:generate": "web-push generate-vapid-keys"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.2",
		"@eslint/js": "^9.36.0",
		"@sveltejs/adapter-node": "^5.3.2",
		"@sveltejs/kit": "^2.43.5",
		"@sveltejs/vite-plugin-svelte": "^6.2.0",
		"@tailwindcss/vite": "^4.1.13",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/node": "^24.6.0",
		"@types/web-push": "^3.6.4",
		"drizzle-kit": "^0.31.5",
		"eslint": "^9.36.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.4",
		"globals": "^16.4.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.3",
		"prettier": "^3.6.2",
		"prettier-plugin-classnames": "0.8.3",
		"prettier-plugin-merge": "^0.8.0",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"shiki": "^3.13.0",
		"svelte": "^5.39.6",
		"svelte-check": "^4.3.2",
		"tailwindcss": "^4.1.13",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.44.0",
		"vite": "^7.1.7",
		"vite-bundle-analyzer": "^1.2.3"
	},
	"dependencies": {
		"@dotenvx/dotenvx": "^1.51.0",
		"@fontsource-variable/montserrat": "^5.2.8",
		"@fontsource-variable/source-serif-4": "^5.2.9",
		"@fontsource/poppins": "^5.2.7",
		"@milkdown/kit": "^7.16.0",
		"@milkdown/plugin-clipboard": "^7.16.0",
		"@milkdown/plugin-history": "^7.16.0",
		"@milkdown/preset-commonmark": "^7.16.0",
		"@milkdown/theme-nord": "^7.16.0",
		"cheerio": "^1.1.2",
		"drizzle-orm": "^0.44.5",
		"jsonwebtoken": "^9.0.2",
		"mediainfo.js": "^0.3.6",
		"plaiceholder": "^3.0.0",
		"postgres": "^3.4.7",
		"pow-reaction": "^1.0.17",
		"remark-parse": "^11.0.0",
		"sharp": "^0.34.4",
		"super-sitemap": "^1.0.5",
		"svelte-sonner": "^1.0.5",
		"trap-focus-svelte": "^1.1.0",
		"unified": "^11.0.5",
		"web-push": "^3.6.7",
		"zod": "^4.1.11"
	}
}
